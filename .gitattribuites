# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python eol=lf
*.pyi text diff=python eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
docs/* text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
requirements.txt text eol=lf